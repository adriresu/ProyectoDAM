<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgroundgreen"
    tools:context=".Character">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nombreCharacter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="13dp"
                    android:text="Name"
                    android:fontFamily="@font/baloo_bhai_2_extrabold"
                    android:paddingLeft="10dp"
                    android:textAllCaps="true"
                    android:textColor="@color/teal_200"
                    android:textSize="29dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/apellidosCharacter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:text="Surname"
                    android:fontFamily="@font/baloo_bhai_2_extrabold"
                    android:paddingLeft="10dp"
                    android:textAllCaps="true"
                    android:textColor="@color/teal_200"
                    android:textSize="29dp"
                    android:textStyle="bold"

                    />

            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/gradientcabecera">

            <ImageView
                android:id="@+id/imageCharacter"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:maxWidth="300dp"
                android:maxHeight="300dp"
                android:minWidth="50dp"
                android:minHeight="50dp"
                tools:srcCompat="@drawable/notfound" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/gradientcabecera"
                            android:fontFamily="@font/baloo_bhai_2_extrabold"
                            android:paddingLeft="15dp"
                            android:paddingTop="3dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="3dp"
                            android:text="@string/actor"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            tools:layout_editor_absoluteX="187dp"
                            tools:layout_editor_absoluteY="187dp" />

                        <TextView
                            android:id="@+id/actorCharacter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:ems="10"
                            android:fontFamily="@font/baloo_bhai_2_extrabold"
                            android:inputType="textPersonName"
                            android:padding="4dp"
                            android:text="Juan Pablo Gomez"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            tools:layout_editor_absoluteX="100dp"
                            tools:layout_editor_absoluteY="220dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/gradientcabecera"
                            android:fontFamily="@font/baloo_bhai_2_extrabold"
                            android:paddingLeft="15dp"
                            android:paddingTop="3dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="3dp"
                            android:text="@string/personality"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            tools:layout_editor_absoluteX="187dp"
                            tools:layout_editor_absoluteY="187dp" />

                        <TextView
                            android:id="@+id/personalidadCharacter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:textAlignment="center"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:fontFamily="@font/baloo_bhai_2_extrabold"
                            android:padding="4dp"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:text="Activa"
                            tools:layout_editor_absoluteX="100dp"
                            tools:layout_editor_absoluteY="220dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/gradientcabecera"
                            android:fontFamily="@font/baloo_bhai_2_extrabold"
                            android:paddingLeft="15dp"
                            android:paddingTop="3dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="3dp"
                            android:text="@string/character_age"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            tools:layout_editor_absoluteX="187dp"
                            tools:layout_editor_absoluteY="187dp" />

                        <TextView
                            android:id="@+id/edadCharacter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:ems="10"
                            android:fontFamily="@font/baloo_bhai_2_extrabold"
                            android:inputType="textPersonName"
                            android:padding="4dp"
                            android:text="15"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            tools:layout_editor_absoluteX="100dp"
                            tools:layout_editor_absoluteY="220dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradientcabecera"
                            android:fontFamily="@font/baloo_bhai_2_extrabold"
                            android:paddingLeft="15dp"
                            android:paddingTop="3dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="3dp"
                            android:layout_gravity="center"
                            android:text="@string/birthplace"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            tools:layout_editor_absoluteX="187dp"
                            tools:layout_editor_absoluteY="187dp" />

                        <TextView
                            android:id="@+id/origenCharacter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:ems="10"
                            android:fontFamily="@font/baloo_bhai_2_extrabold"
                            android:inputType="textPersonName"
                            android:padding="4dp"
                            android:text="Baltimore"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            tools:layout_editor_absoluteX="100dp"
                            tools:layout_editor_absoluteY="220dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/gradientcabecera"
                            android:fontFamily="@font/baloo_bhai_2_extrabold"
                            android:text="@string/power"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/poderCharacter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/baloo_bhai_2_extrabold"
                            android:text="@string/luffypower"
                            android:textColor="@color/white"
                            android:textSize="23sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@drawable/gradientcabecera"
                            android:fontFamily="@font/baloo_bhai_2_extrabold"
                            android:text="@string/description"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textSize="20dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/descripcionCharacter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/baloo_bhai_2_extrabold"
                            android:text="@string/descriptiontext"
                            android:textColor="@color/white"
                            android:layout_marginBottom="20dp"
                            android:textSize="23sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>